  <body>
    <!-- Main Wrapper -->
    <div class="main-wrapper">
      <!-- Header -->
      <div class="header">
      <!-- Logo -->
      <div class="header-left">
        <a href="/client/dashboard" class="logo">
<img src="/img/logo.png" alt="Logo" width="140" height="50">
